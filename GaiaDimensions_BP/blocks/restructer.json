{
  "format_version": "1.20.50",
  "minecraft:block": {
    "description": {
      "identifier": "gaia:restructer",
      "menu_category": {
        "category": "items",
        "group": "itemGroup.name.furnaces",
        "is_hidden_in_commands": false
      },
      "states": {
        "gaiadimension:direction": [2, 3, 4, 5],
        "gaiadimension:lit": [false, true],
        "gaiadimension:entity": [false, true]
      }
    },
    "components": {
      "minecraft:collision_box": true,
      "minecraft:selection_box": true,
      "minecraft:display_name": "Restructer",
      "minecraft:material_instances": {
        "up": {
          "texture": "restructer_top",
          "render_method": "opaque"
        },
        "down": {
          "texture": "restructer_top",
          "render_method": "opaque"
        },
        "south": {
          "texture": "restructer_front",
          "render_method": "opaque"
        },
        "*": {
          "texture": "restructer_side",
          "render_method": "opaque"
        }
      },
      "minecraft:unit_cube": {},
      "minecraft:on_player_placing": {
        "event": "setDirection"
      },
      "minecraft:queued_ticking": {
          "looping": true,
          "on_tick": {
              "event": "runRestructer"
          },
          "interval_range": [
              1,
              1
          ]
      }

    },
    "events": {
      "setDirection": {
        "set_block_state": {
          "gaiadimension:direction": "q.cardinal_facing_2d"
        }
      },
      "runRestructer": {
        "run_command": {
            "command": ["execute as @e[r=0] at @s run scriptevent forge:restructurerLoad gaiaf 200 forge:restructurer_arrow forge:restructer_flame"]
        }
    }
    },
    "permutations": [
      {
        "condition": "q.block_state('gaiadimension:lit')",
        "components": {
          "minecraft:material_instances": {
            "up": {
              "texture": "restructer_top",
              "render_method": "opaque"
            },
            "down": {
              "texture": "restructer_top",
              "render_method": "opaque"
            },
            "south": {
              "texture": "restructer_lit",
              "render_method": "opaque"
            },
            "*": {
              "texture": "restructer_side",
              "render_method": "opaque"
            }
          }
        }
      },
      {
        "condition": "q.block_state('gaiadimension:direction') == 3",
        "components": {
          "minecraft:transformation": {
            "rotation": [0, 180, 0]
          }
        }
      },
      {
        "condition": "q.block_state('gaiadimension:direction') == 4",
        "components": {
          "minecraft:transformation": {
            "rotation": [0, 90, 0]
          }
        }
      },
      {
        "condition": "q.block_state('gaiadimension:direction') == 5",
        "components": {
          "minecraft:transformation": {
            "rotation": [0, 270, 0]
          }
        }
      }
    ]
  }
}
