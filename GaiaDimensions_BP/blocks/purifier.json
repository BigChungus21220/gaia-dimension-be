{
  "format_version": "1.19.50",
  "minecraft:block": {
    "description": {
      "identifier": "gaia:purifier",
      "menu_category": {
        "category": "items",
        "group": "itemGroup.name.furnaces",
        "is_hidden_in_commands": false
      },
      "states": {
        "gaiadimension:direction": [0, 1, 2, 3, 4, 5, 6],
        "gaiadimension:lit": [false, true],
        "gaiadimension:entity": [false, true]
      }
    },
    "components": {
      "minecraft:collision_box": true,
      "minecraft:selection_box": true,
      "minecraft:display_name": "Purifier",
      "minecraft:material_instances": {
        "up": {
          "texture": "purifier_top",
          "render_method": "opaque"
        },
        "down": {
          "texture": "purifier_top",
          "render_method": "opaque"
        },
        "south": {
          "texture": "purifier_front",
          "render_method": "opaque"
        },
        "*": {
          "texture": "purifier_side",
          "render_method": "opaque"
        }
      },
      "minecraft:unit_cube": {},
      "minecraft:on_placed": {
        "event": "setEntity"
      },
      "minecraft:on_player_placing": {
        "event": "setDirection"
      },
      "tag:furnace": {},
      "minecraft:queued_ticking": {
        "looping": true,
        "on_tick": {
          "event": "runFurnace"
        },
        "interval_range": [1, 1]
      }
    },
    "events": {
      "setEntity": {
        "sequence": [
          {
            "condition": "q.block_property('gaiadimension:entity') == false",
            "set_block_property": {
              "gaiadimension:entity": true
            },
            "run_command": {
              "command": [
                "summon gaiadimension:furnace_entity gaia_furnace ~~~",
                "execute as @e[r=0] at @s run scriptevent forge:furnaceProperties"
              ]
            }
          }
        ]
      },
      "runFurnace": {
        "run_command": {
          "command": [
            "execute as @e[r=0] at @s run scriptevent forge:furnaceLoad gaiaf 200 forge:flame forge:arrow"
          ]
        }
      },
      "setDirection": {
        "set_block_property": {
          "gaiadimension:direction": "(q.cardinal_facing_2d-2)"
        }
      }
    },
    "permutations": [
      {
        "condition": "q.block_property('gaiadimension:lit') == true",
        "components": {
          "minecraft:material_instances": {
            "up": {
              "texture": "purifier_top",
              "render_method": "opaque"
            },
            "down": {
              "texture": "purifier_top",
              "render_method": "opaque"
            },
            "south": {
              "texture": "purifier_front_lit",
              "render_method": "opaque"
            },
            "*": {
              "texture": "purifier_side",
              "render_method": "opaque"
            }
          }
        }
      },
      {
        "condition": "q.block_property('gaiadimension:direction') == 0",
        "components": {
          "minecraft:rotation": [0, 0, 0]
        }
      },
      {
        "condition": "q.block_property('gaiadimension:direction') == 1",
        "components": {
          "minecraft:rotation": [0, 180, 0]
        }
      },
      {
        "condition": "q.block_property('gaiadimension:direction') == 2",
        "components": {
          "minecraft:rotation": [0, 90, 0]
        }
      },
      {
        "condition": "q.block_property('gaiadimension:direction') == 3",
        "components": {
          "minecraft:rotation": [0, 270, 0]
        }
      }
    ]
  }
}
