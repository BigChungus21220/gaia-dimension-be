{
  "format_version": "1.20.80",
  "minecraft:block": {
    "description": {
      "identifier": "gaia:pillar1",
      "menu_category": {
        "category": "nature",
        "group": "itemGroup.name.log"
      },
      "states": {
        "gaia:rotation": [0, 1, 2]
      }
    },
    "components": {
      "minecraft:on_player_placing": {
        "event": "gaia:rotate"
      },
      "minecraft:material_instances": {
				"*": {
					"texture": "malachite_pillar_side",
					"render_method": "opaque"
				},
				"up": {
					"texture": "malachite_pillar_end",
					"render_method": "opaque"
				},
        "down": {
					"texture": "malachite_pillar_end",
					"render_method": "opaque"
				}
			},
      "minecraft:destructible_by_mining": {
        "seconds_to_destroy": 2
      },
      "minecraft:destructible_by_explosion": {
        "explosion_resistance": 2
      }
    },
    "events": {
      "gaia:rotate": {
        "set_block_state": {
          "gaia:rotation": "Math.floor(query.block_face / 2)"
        }
      }
    },
    "permutations": [
      {
        "condition": "query.block_state('gaia:rotation') == 0",
        "components": {
          "minecraft:transformation": { "rotation": [0, 0, 0] }
        }
      },
      {
        "condition": "query.block_state('gaia:rotation') == 1",
        "components": {
          "minecraft:transformation": { "rotation": [90, 0, 0] }
        }
      },
      {
        "condition": "query.block_state('gaia:rotation') == 2",
        "components": {
          "minecraft:transformation": { "rotation": [0, 0, 90] }
        }
      }
    ]
  }
}