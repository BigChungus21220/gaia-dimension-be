{
	"format_version": "1.20.80",
	"minecraft:block": {
	  "description": {
		"identifier": "gaia:crusted_malachite_bricks_slab",
		"menu_category": {
		  "category": "construction",
		  "group": "itemGroup.name.slab"
		},
		"traits": {
		  "minecraft:placement_position": {
			  "enabled_states": [
				  "minecraft:vertical_half"
			  ]
		  }
	  },
	  "states": {
		  "block:double": [
			  false,
			  true
		  ],
		  "block:waterlogged": [
			  false,
			  true
		  ]
	  }
  },
  "permutations": [
	  // Bottom Slab
	  {
		  "condition": "q.block_state('minecraft:vertical_half') == 'bottom' && !q.block_state('block:double')",
		  "components": {
			  "minecraft:collision_box": {
				  "origin": [-8, 0, -8],
				  "size": [16, 8, 16]
			  },
			  "minecraft:selection_box": {
				  "origin": [-8, 0, -8],
				  "size": [16, 8, 16 ]
			  }
		  }
	  },
	  // Top Slab
	  {
		  "condition": "q.block_state('minecraft:vertical_half') == 'top' && !q.block_state('block:double')",
		  "components": {
			  "minecraft:collision_box": {
				  "origin": [-8, 8, -8],
				  "size": [16, 8, 16]
			  },
			  "minecraft:selection_box": {
				  "origin": [-8, 8, -8],
				  "size": [16, 8, 16]
			  }
		  }
	  },
	  // Double Slab
	  {
		  "condition": "q.block_state('block:double')",
		  "components": {
			  "minecraft:geometry": "minecraft:geometry.full_block",
			  "minecraft:custom_components": ["block:slab_destroy"] 
		  }
	  }
  ],
  "components": {
	  "minecraft:destructible_by_mining": {
		  "seconds_to_destroy": 7
	  },
	  "minecraft:destructible_by_explosion": {
		  "explosion_resistance": 6
	  },
	  "minecraft:geometry": {
		  "identifier": "geometry.slab",
		  "bone_visibility": {
			  "bottom_slab": "q.block_state('minecraft:vertical_half') == 'bottom'",
			  "top_slab": "q.block_state('minecraft:vertical_half') == 'top'"
		  }
	  },
	  "minecraft:custom_components": ["block:slab"], 
		"minecraft:material_instances": {
		  "*": {
			"texture": "malachite_crusted_brick",
			"render_method": "opaque"
		  }
		}
	  }
	}
  }